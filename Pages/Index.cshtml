@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<main class="lg:relative bg-white">
    <div class="mx-auto max-w-7xl w-full pt-28 pb-20 text-center lg:py-48 lg:text-left">
      <div class="px-4 lg:w-1/2 sm:px-8 xl:pr-16">
        <h1 class="text-4xl tracking-tight font-extrabold text-gray-900 sm:text-5xl md:text-6xl lg:text-5xl xl:text-6xl">
          <span class="block xl:inline">Welcome To</span>
          <span class="block text-indigo-600 xl:inline">styleitup</span>
        </h1>
        <p class="mt-3 max-w-md mx-auto text-lg text-gray-500 sm:text-xl md:mt-5 md:max-w-3xl">Where You Can Be The Best Version Off Yourself with The Most Trendiest Clothing in Indonesia.</p>
        <div class="mt-10 pl-28 sm:flex sm:justify-center lg:justify-start">
          <div class="mt-3 rounded-md shadow sm:mt-0 sm:ml-3">
            <a class="w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 md:py-4 md:text-lg md:px-10" asp-page="/Profile"> Our Story </a>
          </div>
          <div class="mt-3 rounded-md shadow sm:mt-0 sm:ml-3">
            <a class="w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-indigo-600 bg-white hover:bg-gray-600 md:py-4 md:text-lg md:px-10" asp-page="/company"> About Us </a>
          </div>
        </div>
      </div>
    </div>
    <div class="relative w-full h-64 sm:h-72 md:h-96 lg:absolute lg:inset-y-0 lg:right-0 lg:w-1/2 lg:h-full">
      <img class="absolute inset-0 w-full h-full object-cover" src="https://public.urbanasia.com/images/post/2021/03/03/1614744487-streetwear---arthurhidden.jpg" alt="">
    </div>
  </main>